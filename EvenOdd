// Program to check if the number is even or odd 

#include<iostream>
using namespace std;

int main(){
	
	int number;
	
	cout<< "Please enter your number  " ;
	
	cin>>number;
	
	int remainder=number%2;
	
	if(remainder==0)
	{
		cout<<"you entered a even number as remainder is " << remainder;
	}
	else
	{
		cout<<"you entered a odd number as remainder is " << remainder;
	}
	
	return 0;
}
